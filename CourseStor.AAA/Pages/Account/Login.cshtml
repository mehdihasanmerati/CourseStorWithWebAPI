@page 
@model CourseStor.AAA.Pages.Account.LoginModel
@{
}

<div class="row d-flex align-items-center justify-content-center mt-3">
    <div class="col-md-4 card p-3">
        <h2 class="text-center text-info">Login</h2>
        <form asp-page="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="returnUrl" />
            <div class="mb-1">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" type="text" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="text" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-1 form-check">
                <label class="form-check-label">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-label" /> @Html.DisplayNameFor(c => c.RememberMe)
                </label>
            </div>
            <div class="row">
                <div class="col-8">
                    <a asp-page="Register" class="text-decoration-none float-start mt-2">Do not have account?</a>
                </div>
                <div class="col-4">
                    <input type="submit" value="Login" class="btn btn-primary btn-sm float-end" />
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}