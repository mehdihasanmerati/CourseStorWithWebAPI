@page
@model CourseStor.AAA.Pages.Users.CreateModel
@{
}
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" type="text" class="form-control" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="text" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mt-2">
        <button class="btn btn-primary" type="submit">Create</button>
        <a asp-page="List" class="btn btn-secondary">Return To List</a>
    </div>
</form>